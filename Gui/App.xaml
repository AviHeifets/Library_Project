<Application x:Class="Gui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Gui" xmlns:helpers="clr-namespace:Gui.Helpers"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resources/WindowStyles.xaml"/>
                <ResourceDictionary Source="Resources/CustomComboBox.xaml"/>
                <ResourceDictionary Source="Resources/InputBoxStyles.xaml"/>
                <ResourceDictionary Source="Resources/DatePickerStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <helpers:BooleanToVisibilityConverterInverse x:Key="BooleanToVisibilityConverterInverse"/>
            <helpers:StringToVisibilityConvertercs x:Key="StringToVisibilityConvertercs"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>